
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <artifactId>openwis-harness-samples</artifactId>
      <groupId>eu.akka.openwis.harness</groupId>
      <version>1.0-SNAPSHOT</version>
   </parent>
   <groupId>eu.akka.openwis.harness</groupId>
   <artifactId>openwis-harness-samples-mssfss</artifactId>
   <packaging>war</packaging>
   <name>openwis-harness-samples-mssfss</name>

   <properties>
      <cxf.version>2.1.10</cxf.version>
   </properties>

   <dependencies>
      <dependency>
         <groupId>eu.akka.openwis.harness</groupId>
         <artifactId>openwis-harness-mssfss</artifactId>
         <version>${project.parent.version}</version>
         <type>jar</type>
         <scope>compile</scope>
      </dependency>
      <dependency>
         <groupId>org.slf4j</groupId>
         <artifactId>slf4j-api</artifactId>
         <version>1.5.6</version>
         <type>jar</type>
         <scope>provided</scope>
      </dependency>
      <dependency>
         <groupId>org.slf4j</groupId>
         <artifactId>slf4j-log4j12</artifactId>
         <version>1.5.6</version>
         <type>jar</type>
         <scope>test</scope>
      </dependency>
   </dependencies>


   <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.3.1</version>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
               <encoding>UTF-8</encoding>
            </configuration>
         </plugin>

         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>jboss-maven-plugin</artifactId>
            <version>1.4.1</version>
            <executions>
               <execution>
                  <phase>install</phase>
                  <goals>
                     <goal>hard-deploy</goal>
                  </goals>
                  <configuration>
                     <serverName>${env.JBOSS_CONF}</serverName>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build></project>